<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="auth_oidc_scope_openid" model="auth_oidc.scope">
        <field name="name">openid</field>
        <field name="description">Core scope required for OpenID Connect.</field>
    </record>
    <record id="auth_oidc_scope_profile" model="auth_oidc.scope">
        <field name="name">profile</field>
        <field name="description">Basic profile information.</field>
    </record>
    <record id="auth_oidc_scope_email" model="auth_oidc.scope">
        <field name="name">email</field>
        <field name="description">Access to user email attributes.</field>
    </record>
    <record id="auth_oidc_scope_org" model="auth_oidc.scope">
        <field name="name">org</field>
        <field name="description">Include company/partner identifiers in ID Token and Userinfo.</field>
    </record>
    <record id="auth_oidc_scope_groups" model="auth_oidc.scope">
        <field name="name">groups</field>
        <field name="description">Expose user groups/roles for authorization decisions.</field>
    </record>
    <record id="auth_oidc_scope_role" model="auth_oidc.scope">
        <field name="name">role</field>
        <field name="description">Expose a primary role tag derived from user groups.</field>
    </record>
    <record id="auth_oidc_scope_address" model="auth_oidc.scope">
        <field name="name">address</field>
        <field name="description">Expose partner address fields.</field>
    </record>
    <record id="auth_oidc_scope_phone" model="auth_oidc.scope">
        <field name="name">phone</field>
        <field name="description">Expose phone and mobile numbers.</field>
    </record>
    <record id="auth_oidc_scope_preferences" model="auth_oidc.scope">
        <field name="name">preferences</field>
        <field name="description">Expose user preferences such as language and timezone.</field>
    </record>
</odoo>
